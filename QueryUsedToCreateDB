INSERT INTO CustomerInfo values("Jmeter",CURRENT_DATE(),150,'Asia');
INSERT INTO CustomerInfo values("C#",CURRENT_DATE(),300,'Asia');


select * from CustomerInfo where purchasedDate=CURDATE() and Location ='Asia';