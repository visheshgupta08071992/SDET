CREATE DATABASE ClassicModels;
use ClassicModels;

CREATE TABLE CustomerInfo

(BookName varchar(50),
PurchasedDate date,
Amount int(50),
Location varchar(50));

INSERT INTO CustomerInfo values("selenium",CURRENT_DATE(),350,'Africa');
